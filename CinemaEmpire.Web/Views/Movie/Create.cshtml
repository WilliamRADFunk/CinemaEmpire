<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #aaaaaa;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #eeeeee;
        }

        td input {
            width: 100%;
        }

        textarea {
            width: 100%;
        }
    </style>
</head>

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("CreateSubmit", "Movie"))
{
    <table>
        <tr>
            <td style="width:20%;">@Html.Label("Title", new { @for = "Title" })</td>
            <td style="width:80%;">@Html.TextBox("Title", "")</td>
        </tr>
        <tr>
            <td style="width:20%;">@Html.Label("Synopsis", new { @for = "Synopsis" })</td>
            <td>@Html.TextArea("Synopsis", "")</td>
        </tr>
        <tr>
            <td style="width:20%;">@Html.Label("Expected Popularity", new { @for = "ExpectedPopularity" })</td>
            <td>@Html.TextBox("ExpectedPopularity", "", new { @type = "number", min = "0", step = "0.01" })</td>
        </tr>
        <tr>
            <td style="width:20%;">@Html.Label("Actual Popularity", new { @for = "ActualPopularity" })</td>
            <td>@Html.TextBox("ActualPopularity", "", new { @type = "number", min = "0", step = "0.01" })</td>
        </tr>
        <tr>
            <td style="width:20%;">@Html.Label("Optimal Season", new { @for = "OptimalSeason" })</td>
            <td>@Html.TextBox("OptimalSeason", "", new { @type = "number" })</td>
        </tr>
        <tr>
            <td style="width:20%;">@Html.Label("Worst Season", new { @for = "WorstSeason" })</td>
            <td>@Html.TextBox("WorstSeason", "", new { @type = "number" })</td>
        </tr>
        <tr>
            <td style="width:20%;">@Html.Label("Cost of License", new { @for = "CostLicense" })</td>
            <td>@Html.TextBox("CostLicense", "", new { @type = "number", min = "0", step = "0.01" })</td>
        </tr>
        <tr>
            <td style="width:20%;">@Html.Label("License Duration", new { @for = "LicenseLength" })</td>
            <td>@Html.TextBox("LicenseLength", "", new { @type = "number" })</td>
        </tr>
    </table>
    <hr />
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Create Movie" class="btn btn-default" />
    </div>
}

<hr />
